.account{
  width: 100%;
  display: flex;
  align-items: center;
  padding:30rpx 20rpx;
  box-sizing: border-box;
  border-bottom: 20rpx solid #f6f6f6;
}
.account image{
  width: 180rpx;
  height: 180rpx;
  min-height: 180rpx;
  min-width: 180rpx;
  margin-left: 40rpx;
  margin-right: 60rpx;
}
.account .account_right{
  width: 100%;
}
.account .account_right .p{
  font-size: 26rpx;
  line-height: 40rpx;
  color: #999;
}
.account .account_right .p text{
  display: inline-block;
  width: 120rpx;
  color: #333;
}
.list{
  width: 100%;
}
.list .list_ul{
  width: 100%;
}
.list .list_ul .hr{
  width: 100%;
  height: 20rpx;
  background-color: #f6f6f6;
}
.list .list_ul .list_li{
  width: 100%;
  padding: 0 20rpx;
  box-sizing: border-box;
  height: 90rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 28rpx;
  color: #666;
  border-bottom: 2rpx solid #f6f6f6;
}
.list .list_ul .list_li:active{
  background-color: #f6f6f6;
}
.list .list_ul .list_li .list_left{
  width: 50%;
  height: 100%;
  display: flex;
  align-items: center;
}
.list .list_ul .list_li .list_left text{
  /* display: inline-block; */
  margin-right: 25rpx;
}